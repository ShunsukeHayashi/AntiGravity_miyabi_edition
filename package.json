{
  "name": "antigravity-ide",
  "displayName": "AntiGravity IDE",
  "version": "0.1.0",
  "description": "AI-powered IDE with agent-first architecture, inspired by Google AntiGravity",
  "main": "./out/main.js",
  "author": "shunsuke",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/antigravity-ide"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "build": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "compile": "npm run build",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext ts",
    "lint:fix": "eslint src --ext ts --fix",
    "test": "node ./out/test/runTest.js",
    "pretest": "npm run build && npm run lint",
    "package": "npm run build && electron-builder",
    "dev": "electron ./out/main.js",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\""
  },
  "dependencies": {
    "electron": "^28.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "electron-builder": "^24.9.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3"
  },
  "build": {
    "appId": "com.antigravity.ide",
    "productName": "AntiGravity IDE",
    "directories": {
      "output": "dist"
    },
    "files": [
      "out/**/*",
      "resources/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "resources/icon.icns",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "icon": "resources/icon.ico",
      "target": [
        "nsis",
        "zip"
      ]
    },
    "linux": {
      "icon": "resources/icon.png",
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ],
      "category": "Development"
    }
  }
}
